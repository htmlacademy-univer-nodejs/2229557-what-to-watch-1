{
  "name": "what-to-watch",
  "version": "1.0.0",
  "description": "Проект «Что посмотреть» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run ts ./src/main.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "server": "json-server ./mocks/mock-server-data.json --port 3123"
    "cli": "ts-node src/cli.ts",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@typegoose/typegoose": "9.13.2",
    "@types/convict": "6.1.1",
    "@types/convict-format-with-validator": "6.0.2",
    "@types/node": "16.7.0",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "dotenv": "16.0.3",
    "eslint": "8.12.0",
    "eslint-config-htmlacademy": "5.1.2",
    "rimraf": "3.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "type": "module",
  "engines": {
    "node": "16.7.0",
    "npm": "7.20.3"
  },
  "dependencies": {
    "convict": "6.2.3",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.5",
    "got": "12.5.1",
    "inversify": "6.0.1",
    "json-server": "0.17.0",
    "pino": "8.6.1",
    "pino-pretty": "9.1.1",
    "reflect-metadata": "0.1.13"
  }
}
